<h1>Listing lectures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Course</th>
    <th>Video location</th>
    <th>Length</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lectures.each do |lecture| %>
  <tr>
    <td><%= lecture.name %></td>
    <td><%= lecture.description %></td>
    <td><%= lecture.course_id %></td>
    <td><%= lecture.video_location %></td>
    <td><%= lecture.length %></td>
    <td><%= link_to 'Show', lecture %></td>
    <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
    <td><%= link_to 'Destroy', lecture, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

